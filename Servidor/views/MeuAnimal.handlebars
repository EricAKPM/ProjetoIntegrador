                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <div class="form-floating">
                                <select name="Status" class="form-select" aria-label="Default select example">
                                    <option value="null" {{FormIgualEstado Porte "null"}}>Status</option>
                                    <option value="Padrao" {{FormIgualEstado Porte "Padrao"}}>Padrão</option>
                                    <option value="Perdido" {{FormIgualEstado Porte "Perdido"}}>Animal perdido</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input type="date" name="DataNascimento" class="form-control" id="floatingInput">
                                <label for="floatingInput">Data de nascimento</label>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
</section>

